{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "types", "../../node_modules/@types",]
  },
  "include": ["src/"],
  "exclude": ["node_modules"],
}
